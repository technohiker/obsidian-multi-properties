{
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"types": ["node", "svelte", "jest"],
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7", "ES2021"]
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "example_code"]
}